@model StoreApp.Models.ProductModel

@{
    ViewBag.Title = "Details Page";
}

<div style="padding:20px">

</div>

<h4>Product Details</h4>
<hr />
<div class="col-7 row border" style="border-color:gray; border-width:thick; margin-left:5px;">
    <label class="col-12">@Html.DisplayFor(model => model.product_title)</label>
    <div class="container">
        <div class="row" style="padding: 5px; margin:0px;" >
            <img class="col-2 img-fluid my-auto " style="width:50px; height:50px; padding:0px;" src="@Html.DisplayFor(model => model.imagePath)" />
            <div class="col-10 container border" style="margin:0px 0px 0px 0px; padding:5px">
                <div class="row" style="margin:0px 0px 0px 0px">
                    <label class="col">@Html.Raw(Model.description)</label>
                    <br />
                    <div class="col-4 offset-1 border" align="center" style="margin:0px 0px 0px 0px; padding:10px; border-color:gray; border-width:thick;" >
                        <label class="offset-1 my-auto" style="padding:5px">Price: @Html.DisplayFor(model => model.price)</label>
                    </div>
                </div>                                     
            </div>
        </div> 
        <div class="row" style="padding: 5px; margin:0px;" >
            <div class="col-12 border" style="margin:0px; padding:0px;border-color:gray; border-width:thick;">
                <label class="row" style="margin:0px;">Specifications</label>
                <div class="container" style="margin:0px; padding:0px;">

                    @foreach (var spec in Model.specs)
                    {
                        <div class="row">
                            <label class="col" style="margin:0px 0px 0px 10px;">@spec.ToString()</label>
                        </div>
                    }
                </div>
            </div>
                
        </div>
    </div> 
        
</div>

